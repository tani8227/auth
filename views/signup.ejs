<link rel="stylesheet" href="/css/signup.css">
   


<div class="outercontainer">




    <div class="container">
        <div class="inner-left-container">
            <div class="btn">
                <button  id="btn1"><a href="/users/auth/google"> Sign up with Google</a></button>
            </div>
            <div class="btn">
                <button id="btn2" ><a href="/users/auth/facebook">Login with Facebook</a></button>
            </div>

        </div>

        <div class="inner-right-container">

            <div class="inside-inner-right-container-form">
                <form action="/users/create" method="post">
                    <input type="text" name="name" placeholder="Enter Name" required>
                    <input type="text" name="email" placeholder="Email Address " required>
                    <input type="password" name="password" placeholder="Password " required>
                    <button type="submit">sign up </button>

                </form>

            </div>

            <div class="inside-inner-right-container">

                <p> existing user ? <a href="/users/signin">Login from here</a></p>
              

            </div>
        </div>
    </div>


</div>