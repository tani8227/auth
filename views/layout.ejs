      <!-- <%- include('_footer');%> -->
      

<%- script %>

<script>

<%if(flash.success && flash.success.length>0){%>

    new Noty({
    theme:"relax",
    type:"success",
    text:  "<%=flash.success%>" ,
    layout:"topRight",
    timeout:1500
}).show();


<%}%>



<%if(flash.error && flash.error.length>0){%>

new Noty({
theme:"relax",
type:"error",
text:  "<%=flash.error%>" ,
layout:"topRight",
timeout:1500
}).show();


<%}%>





</script>
</body>
</html>